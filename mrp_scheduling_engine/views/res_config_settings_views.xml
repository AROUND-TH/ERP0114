<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.scheduling.engine</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//div[@data-key='mrp']" position="inside">
            <h2>Scheduling Engine</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="time_limit"/>
                        <div class="text-muted">
                        Solver Elapsed Time Limit
                        </div>
                        <field name="time_limit"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="fail_limit"/>
                        <div class="text-muted">
                        Solver Failures Number Limit
                        </div>
                        <field name="fail_limit"/>
                    </div>
                </div>
            </div>
            <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="scheduling_horizon"/>
                        <div class="text-muted">
                        Scheduling Horizon (days) for backgroud jobs
                        </div>
                        <field name="scheduling_horizon"/>
                    </div>
                </div>
            </div>
        </xpath>
        </field>
     </record>
</odoo>


