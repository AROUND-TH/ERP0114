<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="0">
        <record id="module_category_mrp_scheduling_engine" model="ir.module.category">
            <field name="name">MRP Scheduling</field>
            <field name="description">MRP Scheduling</field>
            <field name="parent_id" ref="base.module_category_manufacturing"/>
            <field name="sequence">40</field>
        </record>

        <record id="group_scheduling_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_mrp_scheduling_engine"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_scheduling_administrator" model="res.groups">
            <field name="name">Scheduler</field>
            <field name="category_id" ref="module_category_mrp_scheduling_engine"/>
            <field name="implied_ids" eval="[(4, ref('group_scheduling_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
    <data noupdate='1'>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_scheduling_administrator'))]"/>
        </record>
    </data>
</odoo>
